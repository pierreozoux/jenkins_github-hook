# nginx jenkins application vhost
#
# Generated by Chef for <%= node[:fqdn] %>
# Local modifications will be overwritten.
#
server {
  listen            <%= node[:jenkins][:github_hook][:port] %>;
  server_name       <%= @host_name %>;
  client_max_body_size 1024m;
  location / {
    proxy_pass http://127.0.0.1:<%= node[:jenkins][:server][:port] %>/github-webhook/;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
}
  error_log         <%= node[:nginx][:log_dir] %>/github-hook-error.log;
  access_log        <%= node[:nginx][:log_dir] %>/github-hook-access.log;
}
